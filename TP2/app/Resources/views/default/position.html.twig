{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid center-block" style="text-align: center"><br><br>
        <h1>Position du compte de {{ account.owner }}</h1>
    </div><br><br>
    <div class="row container-fluid center">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="text-align: center;">
            État du compte : {{ account.owner }} &nbsp;&nbsp;&nbsp;&nbsp; Montant disponible : {{ account.amount }} &nbsp;&nbsp;&nbsp;&nbsp; Dernière opération : {{ account.lastOp | date("d/m/y") }} &nbsp;&nbsp;&nbsp;&nbsp; Date de création : {{ account.creationDate | date("d/m/y") }}
        </div>
    </div><br><br><br>
    <div class="row container-fluid" style="text-align: center">
        <div class="col-md-12">
            <a style="text-decoration: none; color: white;" href="{{ url('makeChanges', {'id': account.id}) }}">
                <button class="btn btn-danger">
                    Retour
                </button>
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %} {{ parent() }}
{% endblock %}