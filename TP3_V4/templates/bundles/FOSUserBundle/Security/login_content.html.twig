{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container-fluid row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1 class="text-center">Bienvenue chez TravelExpress</h1>
        <h6 class="text-center">Veuillez vous identifier</h6>
        <hr/>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" class="form-control" />
            {% endif %}
          <div class="form-group">
            <label for="username">Pseudo ou adresse mail</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" autocomplete="username" placeholder="John Doe // doe.john@example.com" />
          </div>
          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="*******" />
          </div>
          <div class="form-check">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" hidden/>
            <label for="remember_me" hidden>Se souvenir de moi</label>
          </div>
          <button type="submit" class="btn btn-primary form-control">Connexion</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>