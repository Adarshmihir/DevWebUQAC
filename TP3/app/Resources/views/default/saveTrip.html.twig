{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
    </div>
    {{ dump(trip) }}
    {{ dump(numberPlaces) }}

    <div class="container-fluid row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Paiement de {{ numberPlaces }} places.</h2>
            <h3>{{ numberPlaces * trip.unitPricePlusFees }} $ CAD</h3>
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form(form) }}
        </div>
    </div>
{% endblock %}